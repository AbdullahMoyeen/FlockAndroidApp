<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    tools:context="com.viiup.android.flock.application.HomeEventsCellAdapter">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewEvent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/textViewGroupName"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorListCellIcon"
            android:textSize="12sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEventName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/colorListCellText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewEventStartDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorListCellText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textViewEventDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorListCellText"
            android:textSize="12sp" />

    </LinearLayout>

    <Switch
        android:id="@+id/switchRsvp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:text=""
        android:textOff="No"
        android:textOn="Yes" />

</LinearLayout>
